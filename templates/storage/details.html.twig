<div>
    <h4>{{ storage.name }}</h4>
    <table>
        <tr>
            <th>megnevezés</th>
            <th>kapacitás</th>
            <th>raktárkészlet</th>
        </tr>
        {% for inStock in storage.inStocks %}
            <tr>
                <td>
                    {{ inStock.product.name }} ({{ product_properties(inStock.product) }})
                </td>

                <td class="number">
                    {{ inStock.capacity }}
                </td>

                <td class="number">
                    {{ inStock.stock }}
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
